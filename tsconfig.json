{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "lib": ["es7", "esnext"],
    "rootDirs": ["src", "bin"]
  },
  "include": ["src/**/*", "bin/**/*"],
  "exclude": ["node_modules", "vendor", ".bundle"]
}
